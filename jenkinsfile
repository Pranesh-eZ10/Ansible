pipeline {
  agent any
  environment {
        GIT_REPO_URL = 'https://github.com/Pranesh-eZ10/Ansible.git'
        TERRAFORM_DIR = "/var/lib/jenkins/workspace/${params.Pipeline_name}/terraform/s3/"
    }
  parameters {
        string(name: "Pipeline_name", defaultValue: "", description: "enter pipeline name")
        string(name: "bucketname", defaultValue: "", description: "enter bucket name")
    }
  stages {
    stage('Checkout SCM') {
        steps {
         // Checkout the code from your Git repository
            checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: env.GIT_REPO_URL]]])
         }
        }
        stage('updating parameter') {
        steps {
             dir("${env.TERRAFORM_DIR}"){
          sh "sudo  sed -i -e 's/bucketname/${params.bucketname}/g' main.tf" //update your pem file name
             }
         }
        }
        stage('Execute terraform init') {
            steps {
                dir("${env.TERRAFORM_DIR}") {
                    sh "terraform init"
                }
            }
        }
        stage('Execute terraform apply') {
            steps {
                dir("${env.TERRAFORM_DIR}") {
                    sh "terraform apply -auto-approve"
                }
            }
        }
}
}
